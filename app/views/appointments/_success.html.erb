<%= hidden_field_tag :date, date %>
<%= hidden_field_tag :time, time %>

<div class="col col-lg-9 mx-auto">
    <div class="d-none d-lg-block py-5 my-4"></div>
    <div class="container bg-header rounded p-4">
        <div class="row mt-3 d-lg-none">
            <%= show_svg("congratulations-mobile.svg") %>
        </div>
        <div class="row mt-3 d-none d-lg-block">
            <%= show_svg("congratulations-desktop.svg") %>
        </div>
        <div class="row mb-3">
            <div class="col-12 mx-auto text-success fw-bolder fs-5 text-center">
                Congratulations
            </div>
        </div>
        <div class="row my-3">
            <div class="col-auto mx-auto fs-5 fw-light">
                Appointment Booked
            </div>
        </div>

        <div class="row">
            <div class="col-auto mx-auto">
                <div class="row g-0">
                    <div class="col-auto">
                        <%= show_svg('calendar-blue.svg') %>
                    </div>
                    <div class="col-auto fs-9 d-none d-lg-block fw-bolder">
                        Today, 17th February, 4:00 PM
                    </div>
                    <div class="col-auto fs-5 d-lg-none fw-bolder">
                        Today, 17th Feb, 4:00 PM
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col col-lg-6 mx-auto">
                <div class="row g-0">
                    <div class="col-auto my-2 mx-auto fs-7">
                        Meeting starts in
                    </div>
                </div>
                <div class="row g-0">
                    <% Constants::COUNTDOWN_FIELDS.each do | field |%>
                        <div class="col-2">
                            <div class="row gx-2 px-2 text-primary fw-bolder countdown" id=<%=field%>>
                                <div class="col-auto bg-light rounded-pill me-auto py-1">
                                0
                                </div>
                                <div class="col-auto bg-light rounded-pill py-1">
                                0
                                </div>
                            </div>
                            <div class="row mt-2">
                                <div class="col-auto mx-auto grey-font fs-7 ">
                                    <%= field %>
                                </div>
                            </div>
                        </div>
                        <% unless field == Constants::COUNTDOWN_FIELDS.last %>
                            <div class="col-1 text-center text-primary fs-5">
                            :
                            </div>
                        <% end %>
                    <% end %>
                </div>
            </div>
        </div>
    </div>

    <%= link_to appointments_path, class: "btn btn-outline-primary w-100 my-5" do %>
        My Appointments <%= show_svg('arrow-right.svg')%>
    <% end %>
</div>
<%= javascript_import_module_tag "success_countdown" %>